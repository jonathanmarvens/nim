use io;
use chimpunit;

main argv {
  chimpunit.test("if positive", fn { |t|
    var executed = false;
    if true {
      executed = true;
    }

    t.equals(true, executed);
  });

  chimpunit.test("if negative", fn { |t|
    if false {
      t.fail("Executed false branch!");
    }
  });

  chimpunit.test("else", fn { |t|
    var executed = false;
    if false {
      t.fail("Executed false branch!");
    }
    else {
      executed = true;
    }

    t.equals(true, executed);
  });

  io.print("");
}
